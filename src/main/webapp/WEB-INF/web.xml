<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_5_0.xsd" id="WebApp_ID" version="5.0">
  <display-name>gerenciador</display-name>
  <welcome-file-list>
    <welcome-file>bem-vindo.html</welcome-file>
  </welcome-file-list>

  <filter>
  	<filter-name>MF</filter-name>
  	<filter-class>br.com.alura.gerenciador.servlet.MonitoramentoFilter</filter-class>
  </filter>
  <filter-mapping>
	<filter-name>MF</filter-name>
	<url-pattern>/empresa</url-pattern>
	<url-pattern>/usuario</url-pattern>
  </filter-mapping>
  
  <filter>
  	<filter-name>AF</filter-name>
  	<filter-class>br.com.alura.gerenciador.servlet.AutorizacaoFilter</filter-class>
  </filter>
  <filter-mapping>
	<filter-name>AF</filter-name>
	<url-pattern>/empresa</url-pattern>
	<url-pattern>/ajax</url-pattern>
  </filter-mapping>
  
  <servlet>
  	<servlet-name>CF</servlet-name>
  	<servlet-class>br.com.alura.gerenciador.servlet.ControllerEmpresa</servlet-class>
  </servlet>
  <servlet-mapping>
	<servlet-name>CF</servlet-name>
	<url-pattern>/empresa</url-pattern>
  </servlet-mapping>
  
  <servlet>
    <servlet-name>CU</servlet-name>
    <servlet-class>br.com.alura.gerenciador.servlet.ControllerUsuario</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>CU</servlet-name>
    <url-pattern>/usuario</url-pattern>
  </servlet-mapping>
  
  <servlet>
    <servlet-name>AJ</servlet-name>
    <servlet-class>br.com.alura.gerenciador.servlet.ControllerAJAX</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>AJ</servlet-name>
    <url-pattern>/ajax</url-pattern>
  </servlet-mapping>
  
  <error-page>
  	<error-code>404</error-code>
  	<location>/WEB-INF/view/error/404.html</location>
  </error-page> 
  
  <error-page>
  	<error-code>500</error-code>
  	<location>/WEB-INF/view/error/500.html</location>
  </error-page> 
</web-app>